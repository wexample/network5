{% block vue_require %}
{{- vue_require('vue/debug-assets-explorer-item') -}}
{% endblock %}

{% block component %}
<div class="debug-assets">
<div class="debug-explorer">
  <explorer-item
      :increment="0"
      :object="app.layout"
      :root="this"
      :update-time="updateTime"
      type="layout"
  />
</div>
<div class="debug-details">
  <table class="assets-table">
    <tr v-for="asset in allAssets" :class="buildCssAsset(asset)">
      <td class="asset-activation">
        <div class="tip">
        </div>
      </td>
      <td class="asset-type">
        <div class="pill">{{ 'asset.type' | vue_key }}</div>
      </td>
      <td class="asset-type">
        <div class="fa" :class="'fa-' + (asset.rendered ? 'hdd' : 'clock')"></div>
      </td>
      <td class="asset-size">
        {{ 'formatSize(asset.filesize)' | vue_key }}
      </td>
      <td class="asset-responsive" v-html="asset.responsive || '·'">
      </td>
      <td class="asset-color-scheme">
        <div v-if="asset.theme" class="fa" :class="`fa-${buildColorSchemeIcon(asset)}`"></div>
        <div v-if="!asset.theme">·</div>
      </td>
      <td class="asset-path" v-on:click="assetLog(asset)">
        <div class="table-td-ellipsis-wrapper">
          {{ 'shortenAssetPath(asset)' | vue_key() }}
        </div>
      </td>
    </tr>
  </table>
</div>
</div>
{% endblock %}