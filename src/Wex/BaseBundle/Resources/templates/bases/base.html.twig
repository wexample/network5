{%- set page_title_default = '@page::page_title' -%}
{%- set page_title = page_title|default(page_title_default) -%}
{%- set document_head_title_args = document_head_title_args|default({}) -%}
{%- set document_head_title = document_head_title|default(page_title) -%}
{%- set layout_name = layout_name|default(null) -%}
{%- set layout_use_js = (layout_use_js is defined ? layout_use_js : true) -%}
{%- set layout_theme = layout_theme|default('default') -%}
{%- set page_name = page_name_from_path(page_path) -%}

{%- block template_base -%}
    {%- block template_config -%}
        {{- layout_init(layout_name, layout_theme, layout_use_js) -}}
        {{- page_init(page_name, layout_use_js) -}}
        {{- translation_set_domain_from_path('page', page_path) -}}
    {%- endblock -%}
{%- endblock -%}