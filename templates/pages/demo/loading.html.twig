{%- extends 'layouts/public.html.twig' -%}

{%- set template_path = _self -%}

{%- block page_content_body -%}
    <div class="blocks blocks-no-stretch blocks-side-column-right">
        <div class="block">
            {{ '@page::layout_overlay.body' | trans }}
        </div>
        <div class="block blocks-col">
            <button class="mdc-button mdc-button--raised button button-full-width">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Test</span>
            </button>
        </div>
    </div>
    <h2>{{ '@page::components.title' | trans }}</h2>
    <h3>{{ '@page::components.init.title' | trans }}</h3>
    <h4>{{ '@page::components.init.parent.title' | trans }}</h4>
    <div class="block">
        {{ '@page::components.init.parent.body' | trans }}
        {{ com_init_parent('components/demo-init') }}
    </div>
    <h4>{{ '@page::components.init.previous.title' | trans }}</h4>
    <div class="block">
        {{ '@page::components.init.previous.body' | trans }}
    </div>
    {{ com_init_previous('components/demo-init') }}
    <h4>{{ '@page::components.init.class.title' | trans }}</h4>
    <div class="block {{ com_init_class('components/demo-init') }}">
        {{ '@page::components.init.class.body' | trans }}
    </div>
{%- endblock -%}