{%- extends 'layouts/public.html.twig' -%}

{%- set template_path = _self -%}

{%- block template_config -%}
    {{ js_var('demoVariable', 'demoVariableValueOverridden') }}
    {{ js_var('demoVariable', 'demoVariableValue') }}
    {{ js_var('demoVariableBoolean', true) }}
    {{ js_var('demoVariableInteger', 123) }}
    {{ js_var('demoVariableFloat', 123.456) }}
    {{ js_var('demoVariableObject', {'key':{'key2':'value'}}) }}
    {{ parent() }}
{%- endblock -%}

{%- block page_content_body -%}
    <div class="inline-infos">
        <div class="info">
            {{ '@page::infos.template_name' | trans }} : <b>{{ template_name }}</b>
        </div>
        <div class="info">
            {{ '@page::infos.layout_name' | trans }} : <b>{{ layout_name }}</b>
        </div>
    </div>
    <h2>{{ '@page::themes.title' | trans }}</h2>
    <div class="blocks">
        <div class="block blocks-col">
            <button data-theme="dark" class="demo-button-switch-theme mdc-button mdc-button--raised button button-full-width">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Thème sombre</span>
            </button>
        </div>
        <div class="block blocks-col">
            <button data-theme="light" class="demo-button-switch-theme mdc-button mdc-button--raised button button-full-width">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Thème clair</span>
            </button>
        </div>
        <div class="block blocks-col">
            <button data-theme="default" class="demo-button-switch-theme mdc-button mdc-button--raised button button-full-width">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Thème par défaut</span>
            </button>
        </div>
    </div>
    <h2>{{ '@page::breakpoints.title' | trans }}</h2>
    <div class="blocks blocks-no-stretch blocks-side-column-left">
        <div class="blocks-col">
            {% for name,sizeMin in displayBreakpoints %}
                <div class="inline-infos display-breakpoint display-breakpoint-{{ name }}">
                    <div class="pill size-name">{{ name }}</div>
                    <div class="size-min">{{ sizeMin }}px</div>
                </div>
            {% endfor %}
        </div>
        <div class="block theme-dark">
            {{ '@page::breakpoints.body' | trans | raw }}
            <br>
            <br>
            {{ ('@page::breakpoints.body_' ~ (layout_use_js ? '' : 'no_') ~ 'js') | trans | raw }}
        </div>
    </div>
    <h2>{{ '@page::resources.title' | trans }}</h2>
    <div class="block">
        {{ ('@page::resources.body_' ~ (layout_use_js ? '' : 'no_') ~ 'js') | trans | raw }}
    </div>
    {% if layout_use_js %}
        <div class="blocks">
            <div class="block theme-light">
                <ul id="loaded-assets-list-css"></ul>
            </div>
            <div class="block theme-light">
                <ul id="loaded-assets-list-js"></ul>
            </div>
        </div>
        <div class="block">
            {{ '@page::resources.body_available' | trans | raw }}
        </div>
        <div class="blocks">
            <div class="block theme-light">
                <ul id="loaded-assets-list-css-available"></ul>
            </div>
            <div class="block theme-light">
                <ul id="loaded-assets-list-js-available"></ul>
            </div>
        </div>
    {% endif %}
{%- endblock -%}